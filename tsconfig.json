{
  "compilerOptions": {
    "outDir": "dist",
    "module": "es2015",
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
